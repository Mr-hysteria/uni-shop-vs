{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "condition": {
    //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式（list 的索引项）
    "list": [
      {
        "name": "pages/Pay/Pay", //模式名称
        "path": "pages/Pay/Pay"
      },
      {
        "name": "pages/cartReal/cartReal",
        "path": "pages/cartReal/cartReal"
      },
      {
        "name": "pages/goods_detail/goods_detail",
        "path": "pages/goods_detail/goods_detail",
        "query": "goods_id=17925"
      }
    ]
  },
  "pages": [
    {
      "path": "pages/cartReal/cartReal",
      "style": {
        "navigationBarTitleText": "购物车",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/Pay/Pay",
      "style": {
        "navigationBarTitleText": "支付页",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/cart/cart",
      "style": {
        "navigationBarTitleText": "简易购物车",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/goods_detail/goods_detail",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "商品详情",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/category/category",
      "style": {
        "navigationBarTitleText": "分类页",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "商城主页",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/goods_list/goods_list",
      "style": {
        "navigationBarTitleText": "商品列表",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "用户中心",
        "enablePullDownRefresh": false
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#eb4450",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#333",
    "selectedColor": "#eb4450",
    "backgroundColor": "#FAFAFA",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/icons/home.png",
        "selectedIconPath": "static/icons/home-o.png",
        "text": "主页"
      },
      {
        "pagePath": "pages/category/category",
        "iconPath": "static/icons/category.png",
        "selectedIconPath": "static/icons/category-o.png",
        "text": "分类"
      },
      {
        "pagePath": "pages/cartReal/cartReal",
        "iconPath": "static/icons/cart.png",
        "selectedIconPath": "static/icons/cart-o.png",
        "text": "购物车"
      },
      {
        "pagePath": "pages/user/user",
        "iconPath": "static/icons/my.png",
        "selectedIconPath": "static/icons/my-o.png",
        "text": "用户中心"
      }
    ]
  },
  "uniIdRouter": {}
}
